<!DOCTYPE html>
<html>
    <head>

          <title>Pragprog Books Online Store</title>

          <%= stylesheet_link_tag    "application" %>
          <%= javascript_include_tag "application" %>
          <%= csrf_meta_tags %>

    </head>

    <body id="store" >

        <div id="banner" >

            <%= image_tag("logo.png") %>
            <%= @page_title || "Pragmatic Bookshelf" %>

        </div>

        <div id="columns" >

            <div id="side" >

                <div id="cart">
                  <%= render @cart %>
                </div>

                <%= render 'shared/menu' %>

                <span><%= @date_time %></span>

            </div>

            <div id="main" >

                <%= yield %>

            </div>

        </div>

    </body>

</html>
